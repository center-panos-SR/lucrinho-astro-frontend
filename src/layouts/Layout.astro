---
import '../styles/global.css';
import MetaTags from '~/components/common/MetaTags.astro';
import Header from '~/components/widgets/Header.astro';
import Footer from '~/components/widgets/Footer.astro';
import AdSense from '~/components/widgets/AdSense.astro';
import { getI18N } from '~/utils/config';

export interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonical?: string | URL;
  noindex?: boolean;
  nofollow?: boolean;
}

const { language, textDirection } = getI18N();

const {
  title,
  description,
  image,
  canonical,
  noindex = false,
  nofollow = false,
} = Astro.props;
---

<!doctype html>
<html lang={language} dir={textDirection} class="2xl:text-[20px]">
  <head>
    <MetaTags
      title={title}
      description={description}
      image={image}
      canonical={canonical}
      noindex={noindex}
      nofollow={nofollow}
    />
    <link rel="icon" type="image/webp" href="/favicon-lucrinho.webp" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Critical CSS Inline para mobile -->
    <style>
      /* Critical CSS - Above the fold */
      body{margin:0;padding:0;font-family:-apple-system,BlinkMacSystemFont,'Segoe UI',Roboto,sans-serif}
      .header-ed6d361ee809{position:sticky;top:0;z-index:50;width:100%;background:#fff;display:flex;align-items:end;justify-content:center;padding:13px 24px;border-bottom:1px solid rgba(226,232,240,.5);box-shadow:0 1px 3px 0 rgba(0,0,0,.1)}
      .logo-lucrin-ed781b57548d{width:110px;height:24px;background:url(/LogoLucrinho.png) no-repeat center/contain;flex-shrink:0}
      .hero-section{min-height:calc(100vh - 200px)}
      .article-image-wrapper{position:relative;aspect-ratio:16/9;overflow:hidden}
      .article-image{width:100%;height:100%;object-fit:cover}
      @media(min-width:768px){.logo-lucrin-ed781b57548d{width:133px}}
    </style>
    
    <!-- Preload recursos crÃ­ticos -->
    <link rel="preload" href="/src/assets/font/Trenda Semibold.otf" as="font" type="font/otf" crossorigin="anonymous" />
    <link rel="preload" href="/LogoLucrinho.png" as="image" fetchpriority="high" />
    <link rel="preload" href="/placeholder-stock-market.jpg" as="image" fetchpriority="high" />
    
    <!-- DNS Prefetch para recursos externos -->
    <link rel="dns-prefetch" href="https://pagead2.googlesyndication.com" />
    <link rel="dns-prefetch" href="https://googleads.g.doubleclick.net" />
    <link rel="preconnect" href="https://pagead2.googlesyndication.com" crossorigin />
    
    <!-- Resource hints para melhorar TTFB -->
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  </head>
  <body class="antialiased text-default bg-page tracking-tight">
    <Header />
    
    <!-- Google AdSense - Header Top Banner -->
    <AdSense 
      adSlot="YYYYYYYYYY"
      noPadding={true}
    />
    
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
