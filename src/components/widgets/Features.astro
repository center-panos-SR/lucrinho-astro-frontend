---
export interface Props {
  title?: string;
  subtitle?: string;
  tagline?: string;
  items?: Array<{
    title: string;
    description?: string;
    icon?: string;
  }>;
}

const { title, subtitle, tagline, items = [] } = Astro.props;
---

<section class="scroll-mt-16" id="features">
  <div class="px-4 py-16 mx-auto max-w-6xl lg:px-8 lg:py-20">
    {
      (title || subtitle || tagline) && (
        <div class="mb-10 md:mx-auto text-center md:mb-12 max-w-3xl">
          {tagline && (
            <p class="text-base text-secondary dark:text-blue-200 font-semibold tracking-wide uppercase">
              {tagline}
            </p>
          )}
          {title && (
            <h2 class="text-4xl md:text-5xl font-bold leading-tighter tracking-tighter mb-4 font-heading">
              {title}
            </h2>
          )}
          {subtitle && (
            <p class="max-w-3xl mx-auto sm:text-center text-xl text-muted dark:text-slate-400">
              {subtitle}
            </p>
          )}
        </div>
      )
    }
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      {
        items.map(({ title, description, icon }) => (
          <div class="flex">
            <div class="flex flex-col p-6 rounded-xl shadow-lg bg-white dark:bg-slate-800 hover:shadow-xl transition-all duration-300 hover:-translate-y-1 border border-gray-100 dark:border-gray-700">
              {icon && (
                <div class="mb-4 text-4xl">
                  <Fragment set:html={icon} />
                </div>
              )}
              <h3 class="text-xl font-bold mb-2 dark:text-white">{title}</h3>
              {description && <p class="text-muted dark:text-slate-400">{description}</p>}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

