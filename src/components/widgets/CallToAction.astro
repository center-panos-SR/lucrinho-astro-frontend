---
export interface Props {
  title?: string;
  subtitle?: string;
  actions?: Array<{
    text: string;
    href: string;
    variant?: 'primary' | 'secondary';
    target?: string;
  }>;
}

const { title, subtitle, actions = [] } = Astro.props;
---

<section class="relative not-prose scroll-mt-16">
  <div class="max-w-6xl mx-auto px-4 sm:px-6">
    <div class="py-12 md:py-20">
      <div class="max-w-3xl mx-auto text-center p-6 rounded-md shadow-xl dark:shadow-none bg-gradient-to-r from-blue-600 to-purple-600 dark:from-blue-700 dark:to-purple-700">
        {
          title && (
            <h2 class="text-4xl md:text-4xl font-bold leading-tighter tracking-tighter mb-4 font-heading text-white">
              {title}
            </h2>
          )
        }
        {subtitle && <p class="text-xl text-gray-100 mb-6">{subtitle}</p>}
        {
          actions && (
            <div class="max-w-xs sm:max-w-md m-auto flex flex-nowrap flex-col sm:flex-row sm:justify-center gap-4">
              {actions.map(({ text, href, variant = 'primary', target }) => (
                <a
                  class:list={[
                    'btn w-full sm:w-auto',
                    variant === 'primary'
                      ? 'bg-white text-gray-900 hover:bg-gray-100'
                      : 'bg-transparent border-2 border-white text-white hover:bg-white hover:text-gray-900',
                  ]}
                  href={href}
                  target={target}
                >
                  {text}
                </a>
              ))}
            </div>
          )
        }
      </div>
    </div>
  </div>
</section>


