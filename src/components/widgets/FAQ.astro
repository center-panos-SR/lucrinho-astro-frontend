---
export interface Props {
  title?: string;
  subtitle?: string;
  tagline?: string;
  items?: Array<{
    title: string;
    description: string;
  }>;
}

const { title, subtitle, tagline, items = [] } = Astro.props;
---

<section class="px-4 py-16 mx-auto max-w-6xl lg:px-8 lg:py-20">
  {(title || subtitle || tagline) && (
    <div class="mb-10 md:mx-auto text-center md:mb-12 max-w-3xl">
      {tagline && (
        <p class="text-base text-blue-600 dark:text-blue-200 font-semibold tracking-wide uppercase">
          {tagline}
        </p>
      )}
      {title && (
        <h2 class="text-4xl md:text-5xl font-bold leading-tighter tracking-tighter mb-4 font-heading dark:text-white">
          {title}
        </h2>
      )}
      {subtitle && (
        <p class="max-w-3xl mx-auto sm:text-center text-xl text-muted dark:text-slate-400">
          {subtitle}
        </p>
      )}
    </div>
  )}

  <div class="grid gap-6 md:grid-cols-2">
    {items.map(({ title, description }) => (
      <div class="p-6 bg-white dark:bg-slate-800 rounded-xl shadow-md border border-gray-100 dark:border-gray-700">
        <h3 class="text-xl font-bold mb-3 dark:text-white">{title}</h3>
        <p class="text-muted dark:text-slate-400">{description}</p>
      </div>
    ))}
  </div>
</section>


