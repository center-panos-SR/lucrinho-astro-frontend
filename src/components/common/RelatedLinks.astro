---
export interface Props {
  links: Array<{
    title: string;
    href: string;
  }>;
}

const { links } = Astro.props;
---

<div class="related-links">
  <h3 class="related-title">
    <svg class="related-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
    </svg>
    RELACIONADO
  </h3>
  <ul class="related-list">
    {links.map((link) => (
      <li>
        <a
          href={link.href}
          class="related-link"
        >
          {link.title}
        </a>
      </li>
    ))}
  </ul>
</div>

<style>
  .related-links {
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--color-border);
  }

  .related-title {
    font-size: 0.875rem;
    font-weight: 600;
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-foreground);
  }

  .related-icon {
    height: 1rem;
    width: 1rem;
  }

  .related-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .related-list li {
    margin: 0;
  }

  .related-link {
    font-size: 0.875rem;
    color: var(--color-foreground);
    text-decoration: none;
    line-height: 1.625;
    display: block;
    transition: color 0.3s ease;
  }

  .related-link:hover {
    color: var(--color-primary);
  }
</style>




